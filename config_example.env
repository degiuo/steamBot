# Конфигурация системы ботов Steam

# Steam Web API ключ (обязательно)
# Получить можно на: https://steamcommunity.com/dev/apikey
STEAM_API_KEY=your_steam_api_key_here

# Прокси для ботов (опционально)
# Формат: http://username:password@proxy_host:port
PROXY=http://user:pass@proxy.example.com:8080

# Директория для хранения бэкапов логов
LOGS_BACKUP_DIR=backups/logs

# Настройки базы данных (для будущих версий)
DATABASE_URL=sqlite:///data/bots.db

# Настройки API сервера
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# Настройки безопасности
API_SECRET_KEY=your_secret_key_for_api_sessions

# Лимиты системы
MAX_BOTS_PER_INSTANCE=50
MAX_ERRORS_PER_BOT=10
BACKUP_RETENTION_DAYS=30

# Интервалы выполнения (в секундах)
BOT_CYCLE_INTERVAL=30
HEALTH_CHECK_INTERVAL=900
INVENTORY_UPDATE_INTERVAL=300

# Настройки Steam
STEAM_GUARD_MOBILE=true
STEAM_AUTO_ACCEPT_GIFTS=false

# Логирование
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Уведомления (для будущих версий)
NOTIFICATION_EMAIL=admin@example.com
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id 